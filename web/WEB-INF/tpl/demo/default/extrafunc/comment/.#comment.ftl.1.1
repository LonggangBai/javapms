[#assign i=i+1]
[#if i lt comment.child?size]
[#assign hasnext=true]
[#assign co=comment.child[i]]
[#else]
[#assign hasnext=false]
[#assign co=comment]
[/#if]
[#if co.checked]
<div class="citation">
    [#if hasnext]
    [#include "comment.ftl"]
    [#assign co=comment.child[i]]
    [/#if]
	<div class="citation-title b">
		<span>[#if co.user??]${co.user.username!}[#else]匿名网友[/#if]</span> <em>${comment.child?size-i+1}</em>
	</div>
	<p>${co.content?html}</p>
</div>
[#else]
[#if hasnext]
[#include "comment.ftl"]
[/#if]
[/#if]
[#assign i=i-1]